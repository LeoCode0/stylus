Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
color-claro = #FFF
color-primario = #333333
color-secundario = #8841da

contenedor()
	width: 96%
	margin: 0 auto
	padding: 30px 0


caja-sombra()
	background-color: color-claro
	box-shadow: 0 20px 33px 0px rgba(0,0,0,0.2)
	border-radius: 20px

opacidad(color, cantidad)
	alpha(color, cantidad)

for header in 3 2 1 
	h{header}
		font-size: 35px - (5*header)
		margin: 0

titulos(fuente)
	if fuente == Fuente1
		font-family: Fuente1
	else 
		font-family: Fuente2
		font-weight: 600
		text-transform: uppercase
		// color: color-secundario

*
	box-sizing: border-box

body
	margin: 0
	titulos(Fuente1)
	color: color-primario
